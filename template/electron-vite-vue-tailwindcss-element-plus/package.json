{
  "name": "my-custom-app-name",
  "productName": "MyCustomAppName",
  "version": "1.0.0",
  "main": "dist/main/index.cjs",
  "author": "UPTMR <uptmr@qq.com>",
  "description": "这是我的 App 简介。要构建需要先运行：prebuild 再 build:mac 不然打包出来的是没有 index.html 页面的。build 默认采用的 NODE_ENV = production，并且无法修改。开发的时候不推荐使用 production，有些代码配置是用于 build。推荐 test 与 production 的全局变量是一样的。",
  "homepage": "https://www.uptmr.com",
  "errorInfo": "default-browser 用最新版本会报错：Error [ERR_REQUIRE_ESM]: require() of ES Module",
  "warnInfo": "在 dependencies 的放的包一般是一些：工具、UI库、基础框架",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node scripts/watch.mjs",
    "dev:test": "cross-env NODE_ENV=test node scripts/watch.mjs",
    "dev:production": "cross-env NODE_ENV=production node scripts/watch.mjs",
    "prebuild": "vue-tsc --noEmit --p packages/renderer/tsconfig.json && node scripts/build.mjs",
    "build:toMyMacOS": "yarn run prebuild && electron-builder build --mac",
    "build:toMyWindows": "yarn run prebuild && electron-builder build --win",
    "build:toMyLinux": "yarn run prebuild && electron-builder build --linux",
    "lint:check": "vue-tsc --noEmit && eslint \"**/*.{js,mjs,ts,jsx,tsx,html,vue}\" --quiet",
    "lint:revise": "vue-tsc --noEmit && eslint \"**/*.{js,mjs,ts,jsx,tsx,html,vue}\" --quiet --fix"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@kangc/v-md-editor": "^2.3.18",
    "@types/node": "^18.15.11",
    "axios": "^0.27.2",
    "default-browser": "2.0.1",
    "easy-auto-launch": "^6.0.2",
    "electron-log": "^4.4.8",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "open": "8.4.2",
    "pinia": "^2.0.13",
    "sharp": "^0.32.0",
    "shelljs": "^0.8.5",
    "simple-git": "^3.2.6",
    "ts-md5": "^1.3.1",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.0.14",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@types/comment-json": "^2.4.2",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^11.0.1",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-vue": "^2.1.0",
    "@vue/cli-plugin-eslint": "^5.0.4",
    "@vue/cli-service": "^5.0.4",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^9.0.0",
    "autoprefixer": "^10.4.4",
    "babel-eslint": "^10.0.1",
    "chalk": "^4.1.2",
    "comment-json": "^4.1.1",
    "cross-env": "^7.0.3",
    "dmg-builder": "^23.0.8",
    "dotenv": "^16.0.0",
    "electron": "^16.2.3",
    "electron-builder": "23.6.0",
    "electron-dl": "^3.3.1",
    "electron-store": "^8.0.1",
    "element-plus": "^2.1.10",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-no-explicit-type-exports": "^0.12.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.0",
